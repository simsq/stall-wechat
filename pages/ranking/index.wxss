/* pages/ranking/index.wxss */

page {
  background: #f7f8fa;
  width: 100vw;
  height: 100vh;
}

.button__container {
  text-align: center;
  padding-top: 12px;
  padding-bottom: 12px;
}

.button__left:hover {
  border: 1px solid gold;
}

.button__right {
  margin-left: 10px;
}

.button__right:hover {
  border: 1px solid gold;
}

.rank__banner {
  background-image: url(https://clpres.oss-cn-shanghai.aliyuncs.com/cip/v6/beijing.jpg);
  color: #fff;
  padding: 0 15px;
}

.rank__title {
  font-size: 28px;
  text-align: center;
  padding: 15px;
}

.rank__list {
  padding: 0 15px 15px;
}

.rank__item {
  padding: 15px 0;
  border-bottom: 1px dotted #eee;
  position: relative;
  display: flex;
  align-items: center;
  color: #4e4f54;
}

.rank__item--first {
  padding: 15px;
  text-align: center;
  overflow: hidden;
  color: #60bed8;
  border: 0;
  flex-direction: column;
}

.rank__item--last {
  border-bottom: 0;
}

.rank__no {
  width: 30px;
  font-size: 14px;
  text-align: center;
}

.rank__icon {
  width: 58px;
  height: 58px;
  background: #f3f3f3;
}

.rank__icon--first {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin-bottom: 10px;
  animation: rank__icon--first 20s infinite linear;
}

@keyframes rank__icon--first {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

.rank__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 8px;
}

.rank__name {
  font-size: 16px;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.rank__detail {
  font-size: 14px;
  word-break: break-all;
  word-wrap: break-word;
}

.rank__detail--close {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}

.rank__tip {
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 0 15px 15px;
}

.text-bg {
  font-size: 16px;
  color: red;
}

.cover-image {
  width: 50px;
  height: 50px;
}

.shangbao {
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  bottom: 0;
  left: 80%;
  padding-bottom: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bg-img {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  height: 500px;
}

/* 设置背景遮罩层样式 */

.b1 {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 999999;
}

/* 设置展示图片大小 */

.b2 {
  width: 85%;
  height: 80%;
}

/* 设置展示图片与关闭按钮图片的距离 */

.t_w {
  margin-top: 20rpx;
}

/* 设置关闭按钮图片显示的大小 */

.b2 image {
  width: 100%;
  height: 100%;
}

/* 设置关闭按钮宽高 */

.t_image {
  width: 60rpx;
  height: 60rpx;
}
